{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "baseUrl": "src/",
    "strict": true,
    "paths": {
      "$/*": ["./*"],
      "$/home/*": ["./app/home/*"],
      "$/settings/*": ["./app/settings/*"],
      "$/components/*": ["./components/*"],
      "$/constants/*": ["./constants/*"],
      "$/hooks/*": ["./hooks/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", ".expo/types/**/*.ts", "expo-env.d.ts"]
}
